---
import Layout from '../layouts/Layout.astro';
import { Plus, Clock, CheckCircle2, AlertCircle } from 'lucide-react';
---

<Layout title="Dashboard - KLPoster">
  <div class="min-h-screen bg-surface p-4 sm:p-6 lg:p-8">
    <div class="max-w-7xl mx-auto space-y-8">
      <div class="flex flex-col sm:flex-row items-start sm:items-center justify-between gap-4">
        <div>
          <h1 class="text-3xl font-bold gradient-shine animate-gradient">Dashboard</h1>
          <p class="mt-2 text-content-400">Manage your scheduled posts and view post history.</p>
        </div>
        <a href="/posts/new" class="btn-primary group relative overflow-hidden">
          <div class="absolute inset-0 w-3/12 bg-gradient-shine animate-shine opacity-30"></div>
          <Plus className="w-5 h-5 mr-2" />
          Create Post
        </a>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <div class="card p-6 space-y-4">
          <div class="w-12 h-12 bg-brand/10 rounded-xl flex items-center justify-center">
            <Clock className="w-6 h-6 text-brand" />
          </div>
          <div>
            <h3 class="text-lg font-semibold">Scheduled</h3>
            <p class="text-3xl font-bold">12</p>
          </div>
        </div>

        <div class="card p-6 space-y-4">
          <div class="w-12 h-12 bg-success/10 rounded-xl flex items-center justify-center">
            <CheckCircle2 className="w-6 h-6 text-success" />
          </div>
          <div>
            <h3 class="text-lg font-semibold">Posted</h3>
            <p class="text-3xl font-bold">48</p>
          </div>
        </div>

        <div class="card p-6 space-y-4">
          <div class="w-12 h-12 bg-warning/10 rounded-xl flex items-center justify-center">
            <AlertCircle className="w-6 h-6 text-warning" />
          </div>
          <div>
            <h3 class="text-lg font-semibold">Failed</h3>
            <p class="text-3xl font-bold">2</p>
          </div>
        </div>

        <div class="card p-6 space-y-4">
          <div class="w-12 h-12 bg-brand/10 rounded-xl flex items-center justify-center">
            <Plus className="w-6 h-6 text-brand" />
          </div>
          <div>
            <h3 class="text-lg font-semibold">Total</h3>
            <p class="text-3xl font-bold">62</p>
          </div>
        </div>
      </div>

      <div class="card overflow-hidden">
        <div class="p-6 border-b border-surface-200">
          <h2 class="text-xl font-semibold">Recent Posts</h2>
        </div>
        <div class="overflow-x-auto">
          <table class="w-full">
            <thead>
              <tr class="border-b border-surface-200 bg-surface-100">
                <th class="text-left p-4 font-medium">Album</th>
                <th class="text-left p-4 font-medium">Status</th>
                <th class="text-left p-4 font-medium">Scheduled For</th>
                <th class="text-left p-4 font-medium">Actions</th>
              </tr>
            </thead>
            <tbody>
              <tr class="border-b border-surface-200">
                <td class="p-4">
                  <div class="flex items-center gap-3">
                    <img src="https://placehold.co/40x40" alt="Album cover" class="rounded" width="40" height="40" />
                    <div>
                      <p class="font-medium">Album Name</p>
                      <p class="text-sm text-content-400">Artist Name</p>
                    </div>
                  </div>
                </td>
                <td class="p-4">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-success/10 text-success">
                    Posted
                  </span>
                </td>
                <td class="p-4 text-content-400">Mar 16, 2024 12:00 PM</td>
                <td class="p-4">
                  <div class="flex items-center gap-2">
                    <button class="btn-ghost">View</button>
                    <button class="btn-ghost text-error">Delete</button>
                  </div>
                </td>
              </tr>
              <!-- Add more rows as needed -->
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</Layout> 