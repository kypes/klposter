---
import Layout from '../layouts/Layout.astro';
import { MessageSquare } from 'lucide-react';
---

<Layout title="Login - KLPoster">
  <div class="min-h-screen bg-surface flex items-center justify-center px-4 sm:px-6 lg:px-8">
    <div class="card p-8 w-full max-w-md space-y-8">
      <div class="text-center">
        <h1 class="text-3xl font-bold text-gradient">Welcome to KLPoster</h1>
        <p class="mt-4 text-content-400">Sign in with your Discord account to start creating and scheduling posts.</p>
      </div>

      <div class="relative">
        <div class="absolute inset-0 flex items-center">
          <div class="w-full border-t border-surface-200"></div>
        </div>
        <div class="relative flex justify-center text-sm">
          <span class="px-2 bg-surface-100 text-content-400">Continue with</span>
        </div>
      </div>

      <div>
        <a
          href="/api/auth/discord"
          class="btn-primary w-full justify-center group relative overflow-hidden"
        >
          <div class="absolute inset-0 w-3/12 bg-gradient-shine animate-shine opacity-30"></div>
          <MessageSquare className="w-5 h-5 mr-2" />
          Sign in with Discord
        </a>
      </div>

      <div class="text-center text-sm text-content-400">
        <p>By signing in, you agree to our</p>
        <div class="mt-1 space-x-1">
          <a href="#" class="text-brand hover:text-brand-200 transition-colors duration-200">Terms of Service</a>
          <span>&middot;</span>
          <a href="#" class="text-brand hover:text-brand-200 transition-colors duration-200">Privacy Policy</a>
        </div>
      </div>
    </div>
  </div>
</Layout> 