---
import { Github, Twitter, Heart } from 'lucide-react';

const currentYear = new Date().getFullYear();
---

<footer class="relative mt-24 bg-surface-800/50 border-t border-surface-700/50 backdrop-blur-xl">
  <div class="absolute inset-0 bg-gradient-radial from-brand-600/5 via-transparent to-transparent"></div>
  
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="py-12 md:py-16">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 lg:gap-12">
        <div class="col-span-2">
          <div class="space-y-4">
            <h3 class="text-2xl font-bold gradient-shine animate-gradient">KLPoster</h3>
            <p class="text-content-400 max-w-md">Automate your Discord music sharing with scheduled posts, rich album details, and beautiful embeds. Perfect for music communities and enthusiasts.</p>
            <div class="flex items-center gap-4 pt-2">
              <a href="https://github.com/yourusername/klposter" class="text-content-400 hover:text-content transition-colors">
                <Github client:load className="w-5 h-5" />
                <span class="sr-only">GitHub</span>
              </a>
              <a href="https://twitter.com/yourusername" class="text-content-400 hover:text-content transition-colors">
                <Twitter client:load className="w-5 h-5" />
                <span class="sr-only">Twitter</span>
              </a>
            </div>
          </div>
        </div>

        <div>
          <h4 class="font-semibold mb-4">App</h4>
          <ul class="space-y-2">
            <li><a href="/dashboard" class="text-content-400 hover:text-content transition-colors">Dashboard</a></li>
            <li><a href="/posts/new" class="text-content-400 hover:text-content transition-colors">Create Post</a></li>
            <li><a href="/posts" class="text-content-400 hover:text-content transition-colors">My Posts</a></li>
            <li><a href="/settings" class="text-content-400 hover:text-content transition-colors">Settings</a></li>
          </ul>
        </div>

        <div>
          <h4 class="font-semibold mb-4">Resources</h4>
          <ul class="space-y-2">
            <li><a href="/help" class="text-content-400 hover:text-content transition-colors">Help Center</a></li>
            <li><a href="/discord" class="text-content-400 hover:text-content transition-colors">Discord Server</a></li>
            <li><a href="/status" class="text-content-400 hover:text-content transition-colors">System Status</a></li>
            <li><a href="/feedback" class="text-content-400 hover:text-content transition-colors">Feedback</a></li>
          </ul>
        </div>
      </div>

      <div class="mt-12 pt-8 border-t border-surface-700/50">
        <div class="flex flex-col md:flex-row justify-between items-center gap-4">
          <div class="flex items-center gap-1 text-sm text-content-400">
            <span>Made with</span>
            <Heart client:load className="w-4 h-4 text-error" />
            <span>by</span>
            <a href="https://github.com/yourusername" class="text-brand hover:text-brand-400 transition-colors">@yourusername</a>
          </div>
          
          <div class="flex items-center gap-6 text-sm text-content-400">
            <a href="/privacy" class="hover:text-content transition-colors">Privacy</a>
            <a href="/terms" class="hover:text-content transition-colors">Terms</a>
            <span>&copy; {currentYear} KLPoster. All rights reserved.</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</footer> 